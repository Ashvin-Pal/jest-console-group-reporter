{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "CommonJS",
    "target": "es2021",
    "outDir": "dist",
    "baseUrl": "./src",

    "declaration": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": false,
    "strictFunctionTypes": true,
    "strict": true,
    "alwaysStrict": true,
    "paths": {
      "@/formatters": ["./formatters"],
      "@/logEntry": ["./logEntry"],
      "@/types": ["./types"],
      "@/messageBuilders": ["./messageBuilders"],
      "@/style": ["./style"],
      "@/mergeConsoleMaps": ["./mergeConsoleMaps"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**"]
}
